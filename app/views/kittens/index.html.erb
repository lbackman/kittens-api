<h1>Kittens</h1>

<br>
<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Cuteness</th>
    <th>Softness</th>
    <th colspan="3"></th>
  </tr>
  <% @kittens.each do |kitten| %>
      <tr>
        <td><%= kitten.name %></td>
        <td><%= kitten.age %></td>
        <td><%= kitten.cuteness %></td>
        <td><%= kitten.softness %></td>
        <td><%= link_to 'Show', kitten %></td>
        <td><%= link_to 'Edit', "kittens/#{kitten.id}/edit" %></td>
        <td>
          <%= link_to "Kill #{kitten.name}", kitten_path(kitten), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %>
        </td>
      </tr>
  <% end %>
</table>
<br>
<%= link_to 'New Kitten', new_kitten_path %>
